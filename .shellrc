# ~/.shellrc
# Shared shell settings (bash + zsh). Keep this POSIXy.

# PATH: prefer user bin first
export PATH="$HOME/.local/bin:$PATH"
export PATH="/opt/nvim-linux-x86_64/bin:$PATH"

# NVM (works in bash + zsh)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"

# dotfiles bare-repo helper
alias dot='git --git-dir="$HOME/.dotfiles.git" --work-tree="$HOME"'

# copy command output to clipboard. command | xc
alias xc='xclip -selection clipboard'

# pinentry + terminal match
export GPG_TTY=$(tty)

# set bluetooth headset as output
bt() {
  sink=$(pactl list short sinks | awk '/bluez_output/ {print $2; exit}')
  pactl set-default-sink "$sink"
  for i in $(pactl list short sink-inputs | awk '{print $1}'); do
    pactl move-sink-input "$i" "$sink"
  done
}
